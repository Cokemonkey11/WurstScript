    public function createShadowStrikeTextTag(unit u, int damage, bool isInitialDamage)
        var text = damage.toString()
        if isInitialDamage
            text += "!"

        CreateTextTag()..setText(text, FONT_SIZE)
                       ..setPos(u.getX(), u.getY(), 0.)
                       ..setColor(160, 255, 0, 255)
                       ..setVelocity(0., .04)
                       ..setVisibility(true)
                       ..setFadepoint(2.)
                       ..setLifespan(5.)
                       ..setPermanent(false)
